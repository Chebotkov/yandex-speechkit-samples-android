<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?ysk_dialog_background_color"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/error_text"
        style="@style/YSKTheme.MainText.Red"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/retry_text"
        style="@style/YSKTheme.SmallText.Retry"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:text="@string/ysk_gui_retry"
        android:textColor="?ysk_main_text_selector" />

</FrameLayout>